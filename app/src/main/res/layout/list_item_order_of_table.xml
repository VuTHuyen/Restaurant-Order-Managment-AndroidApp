<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.Material3.CardView.Outlined"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="?attr/colorBackgroundFloating"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card_order_form_a_food"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            >

            <TextView
                android:id="@+id/number_of_order"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:gravity="left"
                android:text=""
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15sp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|start"
                android:text = "x"
                android:layout_marginStart="3dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/name_of_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/md_theme_dark_surface"/>

            </LinearLayout>
            <TextView
                android:id="@+id/price_of_order"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical|end"
                android:textSize="15sp"
                android:text = "adsd"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginStart="10dp"
                android:textColor="?attr/colorOutline"/>
            <TextView
                android:id="@+id/total_price_of_order"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical|end"
                android:text = "adsd"
                android:textSize="15sp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginStart="10dp"
                android:textColor="?attr/colorOutline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text = "â‚¬"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"

                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/md_theme_dark_surface"/>

            <ImageButton
                android:id="@+id/delete_order_button"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:backgroundTint="?colorSurface"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            >
            <TextView
                android:id="@+id/special_wish_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15sp"
                android:textColor="@color/md_theme_dark_surface"/>
        </LinearLayout>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>
</FrameLayout>