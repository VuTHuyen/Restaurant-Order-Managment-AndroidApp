<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/Input_User_Date_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/calendar"
            android:background="@drawable/shape_spinner"
            android:hint="Datum"
            android:layout_gravity="center"
            android:textColorHint="@color/md_theme_light_onSurface"
            android:textSize="12sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:inputType="none"
            android:focusable="false">

        </EditText>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTurnover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        />
    <LinearLayout
        android:id="@+id/relativeLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:id="@+id/totalumsatz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="15sp"
                    android:layout_marginStart="3dp"
                    android:text = "Gesamtsumme:"
                    android:textColor="@color/md_theme_dark_surface"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/total_price_umsatz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_dark_surface"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:text = "â‚¬"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_dark_surface"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>