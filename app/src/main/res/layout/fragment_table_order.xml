<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        />
    <LinearLayout
        android:id="@+id/relativeLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
             />
        <LinearLayout
            android:id="@+id/linearlayout_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/md_theme_dark_surface"
                    android:text = "Zwischensumme:"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="15sp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/md_theme_dark_surface"
                    android:text = "Rabat:"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="15sp"
                    android:layout_marginStart="3dp"
                    android:text = "Gesamtsumme:"
                    android:textColor="@color/md_theme_dark_surface"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/total_price_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_dark_surface"/>
                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="15sp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/md_theme_dark_surface" />
                <TextView
                    android:id="@+id/total_after_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="15sp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/md_theme_dark_surface"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text = "€"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/md_theme_dark_surface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text = "€"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/md_theme_dark_surface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text = "€"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/md_theme_dark_surface"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>